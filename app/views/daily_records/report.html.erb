<!-- Display report of DailyRecords with search functionality -->
<div class="table-responsive">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Date</th>
        <th>Male Avg Count</th>
        <th>Female Avg Count</th>
        <th>Male Avg Age</th>
        <th>Female Avg Age</th>
      </tr>
    </thead>
    <tbody id="dailyRecordsTable">
      <% @daily_records.each do |record| %>
        <tr>
          <td><%= record.date %></td>
          <td><%= record.male_count %></td>
          <td><%= record.female_count %></td>
          <td><%= record.male_avg_age.round %></td>
          <td><%= record.female_avg_age.round %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
